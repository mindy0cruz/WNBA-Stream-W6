# ============================
# Environment settings file (.env)
# Project: WNBA Playoffs Streaming Analytics
# ============================

# Purpose:
#   Defines environment-specific variables for the WNBA Playoffs project.
#   Keeps configuration information out of code files for security & flexibility.

# How to Use:
#   1. Install 'python-dotenv' in your virtual environment.
#   2. In your Python code:
#        from dotenv import load_dotenv
#        load_dotenv()
#   3. Access variables with os.getenv("VARIABLE_NAME")

# ============================
# STREAMING SETTINGS
# ============================

# Time (in seconds) between sending simulated game events
MESSAGE_INTERVAL_SECONDS=3

# ============================
# PROJECT DATA SETTINGS
# ============================

# Base directory where data files are stored
BASE_DATA_DIR=data

# File that simulates live WNBA playoff events
LIVE_DATA_FILE_NAME=wnba_playoffs_live.json

# SQLite database file for storing processed results
SQLITE_DB_FILE_NAME=wnba_playoffs.sqlite

# ============================
# DATABASE SETTINGS
# ============================

# Database type to use: sqlite, postgres, or mongodb
DATABASE_TYPE=sqlite

# PostgreSQL database configuration (only used if DATABASE_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wnba_playoffs_db
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# MongoDB configuration (only used if DATABASE_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=wnba_playoffs_db
MONGODB_COLLECTION=game_events

# Reset database each time the app runs (true = fresh start, false = keep data)
RESET_DB=true

# ============================
# VISUALIZATION SETTINGS
# ============================

# Title to display on charts
VISUALIZATION_TITLE="WNBA Playoffs: Live Game Score & Momentum"

